<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="BDDMH" transaction-type="RESOURCE_LOCAL">
		<class>distribuidoraMH.modelo.entity.Cliente</class>
		<class>distribuidoraMH.modelo.entity.OrdenCc</class>
		<class>distribuidoraMH.modelo.entity.Pedido</class>
		<class>distribuidoraMH.modelo.entity.Perfil</class>
		<class>distribuidoraMH.modelo.entity.Producto</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bddmh"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="mysql"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
